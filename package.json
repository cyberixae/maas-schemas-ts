{
  "name": "maas-schemas-ts",
  "version": "0.0.2",
  "description": "TypeScript types and io-ts validators for maas-schemas",
  "main": "index.js",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "eslint": "eslint --max-warnings=0 '**/*.{ts,json}' --ignore-path .gitignore",
    "lint": "yarn eslint",
    "clean-src": "rm -rf src",
    "clean": "rm -rf lib",
    "build-converter": "tsc converter.ts -outdir tmp",
    "build": "yarn clean && tsc",
    "ci": "yarn lint && yarn build",
    "convert-all": "(yarn clean-src && yarn lint && yarn build-converter && (cd ../maas-schemas/schemas/; find . -name '*.json' -print0|sort -z|xargs -0 -I {} node ../../maas-schemas-ts/tmp/converter.js {} ../../maas-schemas-ts/src \\;) && yarn eslint --fix && yarn build) 2>&1|tee translation.log",
    "deploy-npm": "yarn ci && yarn publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maasglobal/maas-schemas-ts.git"
  },
  "keywords": [
    "schemas",
    "maas",
    "io-ts",
    "TypeScript"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/maasglobal/maas-schemas-ts/issues"
  },
  "homepage": "https://github.com/maasglobal/maas-schemas-ts#readme",
  "peerDependencies": {
    "io-ts": "^2.0.1"
  },
  "devDependencies": {
    "@types/json-schema": "^7.0.3",
    "@types/node": "^12.7.5",
    "@typescript-eslint/eslint-plugin": "^2.1.0",
    "@typescript-eslint/parser": "^2.1.0",
    "eslint": "^6.3.0",
    "eslint-config-prettier": "^6.2.0",
    "eslint-plugin-fp": "^2.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-json": "^1.4.0",
    "eslint-plugin-prettier": "^3.1.0",
    "fp-ts": "^2.0.5",
    "io-ts": "^2.0.1",
    "io-ts-codegen": "^0.4.2",
    "prettier": "^1.18.2",
    "typescript": "^3.5.3"
  }
}
